<UserControl x:Class="BasicControls.PhaseTwo.Topics.SampleViews.CheckBoxSampleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicControls.PhaseTwo.Topics.SampleViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="HorizontalAlignment" Value="left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Row="0"
                  Content="Simple Checkbox" />

        <CheckBox Grid.Row="1">
            <CheckBox.Content>
                <StackPanel Orientation="Horizontal" >
                    <Image Source="..\..\Images\check_icon_green.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Styled Checkbox with Icon"/>
                </StackPanel>
            </CheckBox.Content>
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Foreground" Value="DarkGreen"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <CheckBox Grid.Row="2"
                  Content="Three-state (Indeterminate)" 
                  IsThreeState="True" 
                  IsChecked="{Binding SomeNullableBool, Mode=TwoWay}" />

        <CheckBox Name="advancedCheckBox"
                  Grid.Row="3"
                  ToolTip="This is an advanced checkbox"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked">
            <CheckBox.Content>
                <TextBlock Text="Checkbox with Tooltip, Strike-through when checked">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=advancedCheckBox}" Value="True">
                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </CheckBox.Content>
        </CheckBox>

    </Grid>
</UserControl>
