<UserControl x:Class="BasicControls.PhaseTwo.Topics.SampleViews.PasswordBoxSampleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicControls.PhaseTwo.Topics.SampleViews"
             xmlns:infraUIConverters="clr-namespace:Infrastructure.UI.Converters;assembly=Infrastructure.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <infraUIConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Left">
        <!-- 1. Simple PasswordBox with Placeholder (using watermark style) -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0 10 0 0">
            <TextBlock HorizontalAlignment="Left" Margin="10">
                1. Simple PasswordBox with Placeholder (using watermark style)
            </TextBlock>
            <Grid Margin="10,0,0,0" HorizontalAlignment="Left" >
                <PasswordBox x:Name="passwordBox1" Width="200" Height="30" PasswordChanged="PasswordBox1_PasswordChanged" VerticalContentAlignment="Center"/>
                <TextBlock x:Name="passwordPlaceholder"
                           Text="Enter password"
                       IsHitTestVisible="False"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="Visible" />
            </Grid>
        </StackPanel>
        <!-- 2. PasswordBox with Show/Hide Toggle -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0 10 0 0">
            <TextBlock HorizontalAlignment="Left" Margin="10">
                2. PasswordBox with Show/Hide Toggle
            </TextBlock>
            <Grid Margin="0,0,0,10">
                <PasswordBox x:Name="passwordBox2" Width="200" Height="30" VerticalContentAlignment="Center"/>
            <Button Content="Show"
                Width="50" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,5,0"
                Click="ShowPassword_Click" />
            </Grid>
        </StackPanel>

        <!-- 3. PasswordBox with Validation (using attached property or code-behind) -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0 10 0 0">
            <TextBlock HorizontalAlignment="Left" Margin="10 0 0 10">
                3. PasswordBox with Validation (using attached property or code-behind)
            </TextBlock>
            <PasswordBox x:Name="passwordBox3" HorizontalAlignment="Left" Margin="10 0 0 0"
                 Width="200" Height="30"
                 VerticalContentAlignment="Center"
                 ToolTip="Password must be at least 8 characters"
                 BorderBrush="Red"
                 BorderThickness="2"
                 PasswordChanged="PasswordBox3_PasswordChanged" />
        </StackPanel>

        <!-- 4. PasswordBox with Caps Lock Warning -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0 10 0 0">
            <TextBlock HorizontalAlignment="Left" Margin="10">
                4. PasswordBox with Caps Lock Warning
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                <PasswordBox x:Name="passwordBox4" 
                             Width="200" Height="30" 
                             VerticalContentAlignment="Center"
                             ToolTip="Try typing in with Caps Lock in ON position"
                             PasswordChanged="PasswordBox4_PasswordChanged"/>
                <TextBlock x:Name="capsLockWarning" Text="Caps Lock is ON"
                       Foreground="OrangeRed" Margin="10,0,0,0"
                       VerticalAlignment="Center" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
