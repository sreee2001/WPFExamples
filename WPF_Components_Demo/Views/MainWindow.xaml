<Window x:Class="WPF_Components_Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Components_Demo"
        mc:Ignorable="d"
        Title="Welcome To WPF Features Demonstration" Height="600" Width="800">
    <!--<Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
            <UserControl>
                <!--<ContentControl Content="{Binding}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type local:LabelIntroductionViewModel}">
                            <local:LabelIntroductionView />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type local:LabelExampleViewModel}">
                            <local:LabelExampleView />
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>-->
            </UserControl>
        </DataTemplate>
    </Window.Resources>
    <Border Background="#F0F8FF" 
                BorderBrush="#4682B4" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="10" 
                Margin="10">
        <DockPanel>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Top">
                <TextBlock  Text="Welcome to WPF Features Demonstration" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Margin="10"
                            HorizontalAlignment="Center" />
            </Border>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Left">
                <TreeView ItemsSource="{Binding TopicViewModels}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          Margin="10" 
                          DockPanel.Dock="Left" 
                          Width="300"
                          HorizontalAlignment="Left"
                          BorderThickness="0"
                          BorderBrush="Transparent"
                          Background="#F0F8FF"
                          >
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <!--<Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />-->
                            <Setter Property="IsExpanded" Value="True" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:TopicViewModel}" ItemsSource="{Binding SubTopics}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                                <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                                <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                            </StackPanel>
                        </DataTemplate>

                        <!--<DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}" FontSize="16">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding SetIntroductionPageCommand}" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                            <Image Source="/Resources/Images/open_in_new_24dp_1F1F1F.png" Width="16" Height="16" Margin="5,0,0,0" VerticalAlignment="Center" >
                                <Image.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding LaunchDemoCommand}" />
                                </Image.InputBindings>
                            </Image>
                        </StackPanel>
                        <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                    </StackPanel>
                </DataTemplate>-->
                    </TreeView.Resources>
                </TreeView>
            </Border>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Top">

                <ContentControl Content="{Binding SelectedIntroductionView}" 
                        Margin="10" 
                        DockPanel.Dock="Bottom" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch">
                    <!--<ContentControl.Resources>
                <DataTemplate DataType="{x:Type local:LabelIntroductionViewModel}">
                    <local:LabelIntroductionView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type local:LabelExampleViewModel}">
                    <local:LabelExampleView />
                </DataTemplate>
            </ContentControl.Resources>-->
                </ContentControl>
            </Border>
        </DockPanel>
    </Border>
</Window>
