<Window x:Class="WPF_Components_Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Components_Demo"
        xmlns:infraUIConverters="clr-namespace:Infrastructure.UI.Converters;assembly=Infrastructure.UI"
        mc:Ignorable="d"
        Title="Welcome To WPF Features Demonstration" Height="800" Width="1200">
    <Window.Resources>
        <infraUIConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Border Background="#F0F8FF" 
                BorderBrush="#4682B4" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="10" 
                Margin="10">
        <DockPanel>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Top">
                <TextBlock  Text="Welcome to WPF Features Demonstration" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Margin="10"
                            HorizontalAlignment="Center" />
            </Border>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Left">
                <TreeView ItemsSource="{Binding TopicViewModels}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          Margin="10" 
                          DockPanel.Dock="Left" 
                          Width="300"
                          HorizontalAlignment="Left"
                          BorderThickness="0"
                          BorderBrush="Transparent"
                          Background="#F0F8FF"
                          >
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <!--<Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />-->
                            <Setter Property="IsExpanded" Value="True" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:TopicViewModel}" ItemsSource="{Binding SubTopicViewModels}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                                <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                                <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Border>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="10" 
                    Margin="10"
                    DockPanel.Dock="Top">

                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Button Command="{Binding LaunchDemoCommand}"
                                Visibility="{Binding IsSubTopicSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            Try it out
                        </Button>

                        <ContentControl Content="{Binding SelectedIntroductionViewModel}" 
                            Margin="10" 
                            DockPanel.Dock="Bottom" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Border>
</Window>
