<Window x:Class="WPF_Components_Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Components_Demo"
        xmlns:infraUIConverters="clr-namespace:Infrastructure.UI.Converters;assembly=Infrastructure.UI"
        mc:Ignorable="d"
        Title="Welcome To WPF Features Demonstration" Height="800" Width="1200">
    <Window.Resources>
        <infraUIConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4682B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"                                  
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#F0F8FF" 
                BorderBrush="#4682B4" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="5" 
                Margin="5">
        <DockPanel>
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="5" 
                    Margin="5"
                    DockPanel.Dock="Top">
                <TextBlock  Text="Welcome to WPF Features Demonstration" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Margin="5"
                            HorizontalAlignment="Center" />
            </Border>
            
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="5" 
                    Margin="5"
                    DockPanel.Dock="Left">
                <StackPanel>
                    <Label 
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="DemiBold"
                           FontStyle="Italic"
                           >
                        <Label.Content>
                            <TextBlock>
                                <Underline>"Table of Contents" </Underline>
                            </TextBlock>
                        </Label.Content>
                    </Label>
                    <TreeView ItemsSource="{Binding TopicViewModels}"
                              SelectedItemChanged="TreeView_SelectedItemChanged"
                              Margin="5" 
                              DockPanel.Dock="Left" 
                              Width="300"
                              HorizontalAlignment="Left"
                              BorderThickness="0"
                              BorderBrush="Transparent"
                              Background="#F0F8FF"
                              >
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="True" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type local:TopicViewModel}" ItemsSource="{Binding SubTopicViewModels}">
                                <StackPanel>
                                    <TextBlock  FontWeight="Bold" FontSize="16">
                                        <Underline>
                                            <Run Text="{Binding Title}" />
                                        </Underline>
                                    </TextBlock>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                            <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </StackPanel>
            </Border>
            
            <Border Background="#F0F8FF" 
                    BorderBrush="#4682B4" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="5" 
                    Margin="5"
                    DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <Button Command="{Binding LaunchDemoCommand}"
                            Visibility="{Binding IsSubTopicSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="150" Height="50"
                            Style="{StaticResource RoundedButtonStyle}"
                            >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" FontSize="16">Try it out</TextBlock>
                                <Image Source="/Resources/Images/open_in_new_24dp_1F1F1F.png" 
                                        HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="20" Width="20" Margin="10 0 0 0"
                                        />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <ScrollViewer>
                        <ContentControl Content="{Binding SelectedIntroductionViewModel}" 
                            Margin="10" 
                            DockPanel.Dock="Bottom" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" />
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </DockPanel>
    </Border>
</Window>
