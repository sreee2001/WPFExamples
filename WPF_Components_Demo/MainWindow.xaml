<Window x:Class="WPF_Components_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Components_Demo"
        mc:Ignorable="d"
        Title="Welcome To WPF Features Demonstration" Height="600" Width="800">
    <DockPanel>
        <TextBlock Text="Welcome to WPF Features Demonstration" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="10"
                   HorizontalAlignment="Center" 
                   DockPanel.Dock="Top"
                   />
        <TreeView ItemsSource="{Binding Topics}"
                  Margin="10" 
                  DockPanel.Dock="Left" 
                  Width="200"
                  HorizontalAlignment="Left">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:TopicViewModel}" ItemsSource="{Binding SubTopics}">
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                        <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}" FontSize="16">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding LaunchDemoCommand}" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                            <Image Source="/Resources/Images/open_in_new_24dp_1F1F1F.png" Width="16" Height="16" Margin="5,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>
                        <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </DockPanel>
</Window>
