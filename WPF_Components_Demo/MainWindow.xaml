<Window x:Class="WPF_Components_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Components_Demo"
        mc:Ignorable="d"
        Title="Welcome To WPF Features Demonstration" Height="600" Width="800">
    <DockPanel>
        <TextBlock Text="Welcome to WPF Features Demonstration" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="10"
                   HorizontalAlignment="Center" 
                   DockPanel.Dock="Top"
                   />
        <TreeView ItemsSource="{Binding Topics}"
                  Margin="10" 
                  DockPanel.Dock="Left" 
                  Width="200">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubTopics}">
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.Resources>
                <DataTemplate DataType="{x:Type local:SubTopicViewModel}">
                    <TextBlock Text="{Binding Title}">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding LaunchDemoCommand}" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </DockPanel>
</Window>
