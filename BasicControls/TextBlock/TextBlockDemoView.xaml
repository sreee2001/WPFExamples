<UserControl x:Class="BasicControls.TextBlock.TextBlockDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicControls.TextBlock"
             xmlns:core="clr-namespace:Feature.Infrastructure.Core;assembly=Feature.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <core:BrushToColorConverter x:Key="BrushToColorConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="{Binding Header}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
