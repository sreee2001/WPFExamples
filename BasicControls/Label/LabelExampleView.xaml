<UserControl x:Class="BasicControls.Label.LabelExampleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:BasicControls.Label"
        xmlns:core="clr-namespace:Feature.Infrastructure.Core;assembly=Feature.Infrastructure"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <core:BrushToColorConverter x:Key="BrushToColorConverter"/>
        <Style TargetType="Label" x:Key="PropertyLabelStyle">
            <Setter Property="Width" Value="100"/>
        </Style>
        <Style TargetType="TextBox" x:Key="PropertyValueTextBoxStyle">
            <Setter Property="Width" Value="200"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="Different Label Styles in WPF" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        <ItemsControl ItemsSource="{Binding LabelSamples}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="10, 10, 10, 10">
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="Content :" Style="{StaticResource PropertyLabelStyle}"/>
                                    <TextBox Text="{Binding Content, Mode=TwoWay}" Width="150" Height="20" Style="{StaticResource PropertyValueTextBoxStyle}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="FontFamily :"/>
                                    <ComboBox ItemsSource="{Binding DataContext.PropertyValuesCollection.FontFamiliesCollection, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding FontFamily, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="FontSize :"/>
                                    <TextBox Text="{Binding FontSize, Mode=TwoWay}" Width="30" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="FontWeight :"/>
                                    <ComboBox ItemsSource="{Binding DataContext.PropertyValuesCollection.FontWeightsCollection, RelativeSource={RelativeSource AncestorType=Window}}" SelectedItem="{Binding FontWeight, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="Foreground :"/>
                                    <TextBox Text="{Binding Foreground, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="Background :"/>
                                    <TextBox Text="{Binding Background, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="HorizontalAlignment :"/>
                                    <TextBox Text="{Binding HorizontalAlignment, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="VerticalAlignment :"/>
                                    <TextBox Text="{Binding VerticalAlignment, Mode=TwoWay}" Width="100" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="Width :"/>
                                    <TextBox Text="{Binding Width, Mode=TwoWay}" Width="40" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="Height :"/>
                                    <TextBox Text="{Binding Height, Mode=TwoWay}" Width="40" Height="20"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                                    <Label Content="BorderBrush :"/>
                                    <TextBox Text="{Binding BorderBrush, Mode=TwoWay}" Width="40" Height="20"/>
                                    <ComboBox 
                                    ItemsSource="{Binding DataContext.PropertyValuesCollection.BorderBrushColorsCollection,
                                        RelativeSource={RelativeSource AncestorType=Window},
                                        Converter={StaticResource BrushToColorConverter}}" 
                                    SelectedItem="{Binding BorderBrush, Mode=TwoWay, Converter={StaticResource BrushToColorConverter}}"
                                    Width="100" Height="20"/>
                                </StackPanel>
                            </StackPanel>
                            <Separator Background="#FFD3D3D3" Height="1" Margin="0,2,0,2" />
                            <Label Content="{Binding Content, Mode=TwoWay}" 
                                   FontFamily="{Binding FontFamily, Mode=TwoWay}"
                                   FontSize="{Binding FontSize, Mode=TwoWay}"
                                   FontWeight="{Binding FontWeight, Mode=TwoWay}"
                                   Foreground="{Binding Foreground, Mode=TwoWay}"
                                   Background="{Binding Background, Mode=TwoWay}"                               
                                   HorizontalAlignment="{Binding HorizontalAlignment, Mode=TwoWay}"
                                   VerticalAlignment="{Binding VerticalAlignment, Mode=TwoWay}"
                                   VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   Width="{Binding Width, Mode=TwoWay}"
                                   Height="{Binding Height, Mode=TwoWay}"
                                   BorderBrush="{Binding BorderBrush, Mode=TwoWay}"
                                   BorderThickness="1"
                                   />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
        </ItemsControl>
    </StackPanel>
</UserControl>
