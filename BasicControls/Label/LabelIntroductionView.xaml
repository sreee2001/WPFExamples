<UserControl x:Class="BasicControls.Label.LabelIntroductionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicControls.Label"
             xmlns:common="clr-namespace:BasicControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <common:ControlIntroductionDescriptionView/>
        <TextBlock Text="Few Samples of Labels are provided below" FontSize="16" HorizontalAlignment="Center"/>
        <Border Background="#F0F8FF" 
            BorderBrush="#4682B4" 
            BorderThickness="1" 
            CornerRadius="6" 
            Padding="12" 
            Margin="10">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Simple Label" Grid.Row="0" Grid.Column="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="Label with Image" Grid.Row="0" Grid.Column="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/Images/open_in_new_24dp_1F1F1F.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </Label.ContentTemplate>
                </Label>
                <Label Content="Label with TextBlock" Grid.Row="1" Grid.Column="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold"/>
                        </DataTemplate>
                    </Label.ContentTemplate>
                </Label>
                <Label Content="Label with Button" Grid.Row="1" Grid.Column="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label.ContentTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" Width="100" Height="30" Margin="5"/>
                        </DataTemplate>
                    </Label.ContentTemplate>
                </Label>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
