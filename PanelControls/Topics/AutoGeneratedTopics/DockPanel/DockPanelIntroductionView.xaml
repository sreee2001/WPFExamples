<UserControl x:Class="PanelControls.Topics.AutoGeneratedTopics.DockPanel.DockPanelIntroductionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:BasicControls.Common;assembly=BasicControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Feature.Infrastructure.Styles;component/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <common:ControlIntroductionDescriptionView/>
        <Border Style="{StaticResource RoundedPanelBorderStyle}">
            <StackPanel Orientation="Vertical">
                <Label Content="Few Samples of DockPanel are provided below" FontSize="16" HorizontalAlignment="Center">
                    <Label.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold"/>
                        </DataTemplate>
                    </Label.ContentTemplate>
                </Label>
                <Grid >
                <!--introductionView_GridContent-->
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
